@model List<RelacionesEntityFramework.Data.Entidades.Partido>

<h2>Partidos</h2>
<a class="btn btn-success" asp-controller="Partido" asp-action="Agregar">Agregar Partido</a>
<table>
    <thead>
        <tr>
            <th>#</th>
            <th>Equipo visitante</th>
            <th>Equipo local</th>
            <th>Estadio</th>
            <th>Goles visitante</th>
            <th>Goles local</th>
        </tr>
    </thead>
    <tbody>

        @if(Model.Count != 0)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Visitante.Nombre</td>
                    <td>@item.Local.Nombre</td>
                    <td>@item.Estadio</td>
                    <td>@item.GolesVisitante</td>
                    <td>@item.GolesLocal</td>
                </tr>
            }

        }
        else
        {
            <tr>No hay ningun partido registrado</tr>    
        }
    </tbody>
</table>
