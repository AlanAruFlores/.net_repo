@model CapaDominio.Producto

<form class="py-4" asp-controller="Producto" asp-action="GuardarNuevo" method="post">
    <div class="mb-3">
        <label for="Descripcion" class="form-label">Descripcion</label>
        <input type="text" class="form-control" id="Descripcion" name="Descripcion" asp-for="Descripcion">
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="Precio" class="form-label">Precio</label>
        <input type="number" class="form-control" id="Precio" name="Precio" asp-for="Precio" value="0">
        <span asp-validation-for="Precio" class="text-danger"></span>

    </div>
    <div class="mb-3">
        <label for="Stock" class="form-label">Stock</label>
        <input type="number" class="form-control" id="Stock" name="Stock" asp-for="Stock" value="0">
        <span asp-validation-for="Stock" class="text-danger"></span>

    </div>
    <button type="submit" class="btn btn-danger">Guardar</button>
</form>

<partial name="../Shared/_ValidationScriptsPartial.cshtml" />