@model List<MVCApplication.Entidad.Regalo>
@{
}

<table>
    <thead>
        <tr>
            <th>Descripcion</th>
            <th>Precio</th>
            <th>Imagen</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Descripcion</td>

                <td>@item.Precio</td>

                <td>
                    <img src="@item.Imagen" alt="regalo" style="height:100px; width:100px" />
                </td>
            </tr>
        }
    </tbody>

</table>
